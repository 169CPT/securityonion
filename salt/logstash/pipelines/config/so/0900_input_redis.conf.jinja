{%- set MANAGER = salt['grains.get']('master') %}
{%- set THREADS = salt['pillar.get']('logstash_settings:ls_input_threads', '') %}

input {
	redis {
		host => '{{ MANAGER }}'
		port => 6380
		ssl => true
		data_type => 'list'
		key => 'logstash:unparsed'
		type => 'redis-input'
		threads => {{ THREADS }}
	}
}
