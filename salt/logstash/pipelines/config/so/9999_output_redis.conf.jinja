{%- set MANAGER = salt['grains.get']('master') %}
{% set BATCH = salt['pillar.get']('logstash_settings:ls_pipeline_batch_size', 125) %}
output {
	redis {
		host => '{{ MANAGER }}'
		port => 9696
		data_type => 'list'
		key => 'logstash:unparsed'
		congestion_interval => 1
		congestion_threshold => 50000000
		batch => true
		batch_events => {{ BATCH }}
		ssl => true
	}
}
